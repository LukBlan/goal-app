<h1><%= @goal.name %></h1>

<ul>
  <% @goal.comments.each do |comment| %>
    <li><%= comment.comment %></li>
  <% end %>
</ul>

<form action="<%= goal_goal_comments_url(@goal) %>" method="POST">
  <label for="comment">Comment</label>
  <input id="comment" type="text" name="comment[comment]"/>
  <button>Add Comment</button>
</form>
